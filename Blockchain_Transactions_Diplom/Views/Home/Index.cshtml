@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}
<section class="hero text-center bg-light py-5">
    <div class="container">
        <h1 class="display-4">Welcome to Freelance Exchange</h1>
        <p class="lead">Your secure and reliable platform for freelance projects. Join our community of professionals and clients leveraging blockchain technology to ensure safe and transparent transactions.</p>
         @if (SignInManager.IsSignedIn(User))
        {
            <a asp-controller="SmartContract" asp-action="GetFreesmartContracts" class="btn btn-primary btn-lg">Get Started</a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">Get Started</a>
        }

    </div>
</section>
