@using Blockchain_Transactions_Diplom.ViewModels
@model ForgotPasswordViewModel

<main class="form-forgot-password-container d-flex align-items-center justify-content-center">
    <form class="form-forgot-password w-50 p-4 bg-light rounded shadow" asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
        <h1 class="h3 mb-3 fw-normal text-center">Forgot your password</h1>

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-floating mb-3">
            <input type="email" asp-for="Email" class="form-control" id="email" placeholder="you@example.com">
            <label asp-for="Email" for="email">Email</label>
            <div class="invalid-feedback">
                Please enter a valid email address.
            </div>
        </div>

        <button class="btn btn-success w-100 py-2" type="submit">Confirm!</button>
    </form>
</main>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .form-forgot-password-container {
        min-height: calc(100vh - 200px); 
        padding-top: 60px; 
        padding-bottom: 60px; 
    }

    .form-forgot-password {
        max-width: 400px;
        margin: auto;
    }

    .form-forgot-password .form-floating {
        margin-bottom: 15px;
    }

    .form-forgot-password .form-floating input:focus {
        border-color: #fc81cd;
        box-shadow: 0 0 0 0.25rem rgba(252, 129, 205, 0.25);
    }

    .form-forgot-password .form-floating input {
        border-radius: 0.25rem;
    }

    .form-forgot-password .btn-success {
        background-color: #fc81cd;
        border-color: #fc81cd;
    }

    .form-forgot-password .btn-success:hover {
        background-color: #e170b6;
        border-color: #e170b6;
    }

    .form-forgot-password .bg-light {
        background-color: #ffffff !important;
    }

    .form-forgot-password .shadow {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-forgot-password .rounded {
        border-radius: 10px;
    }

    .form-forgot-password .form-control:focus {
        border-color: #fc81cd;
        box-shadow: 0 0 0 0.25rem rgba(252, 129, 205, 0.25);
    }

</style>