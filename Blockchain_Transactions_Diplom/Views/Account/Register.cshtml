@using Blockchain_Transactions_Diplom.ViewModels
@model RegisterViewModel

<main class="form-register-container d-flex align-items-center justify-content-center">
    <form class="form-register w-50 p-4 bg-light rounded shadow" asp-controller="Account" asp-action="Register" method="post" role="form">
        <h1 class="h3 mb-3 fw-normal text-center">Register</h1>

        <div class="form-floating mb-3">
            <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="First name" required>
            <label asp-for="FirstName" for="firstName">First name</label>
            <div class="invalid-feedback">
                Valid first name is required.
            </div>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="Last name" required>
            <label asp-for="LastName" for="lastName">Last name</label>
            <div class="invalid-feedback">
                Valid last name is required.
            </div>
        </div>

        <div class="form-floating mb-3">
            <input type="email" asp-for="Email" class="form-control" id="email" placeholder="you@example.com">
            <label asp-for="Email" for="email">Email</label>
            <div class="invalid-feedback">
                Please enter a valid email address.
            </div>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password" required>
            <label asp-for="Password" for="Password">Password</label>
            <div class="invalid-feedback">
                Valid password is required.
            </div>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password" required>
            <label asp-for="ConfirmPassword" for="ConfirmPassword">Confirm Password</label>
            <div class="invalid-feedback">
                Password confirmation is required.
            </div>
        </div>

        <button class="btn btn-success w-100 py-2" type="submit">Register</button>
    </form>
</main>



<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .form-register-container {
        min-height: calc(100vh - 200px); 
        padding-top: 60px; 
        padding-bottom: 60px;
    }

    .form-register {
        max-width: 400px;
        margin: auto;
    }

    .form-register .form-floating {
        margin-bottom: 15px;
    }

    .form-register .form-floating input:focus {
        border-color: #fc81cd;
        box-shadow: 0 0 0 0.25rem rgba(252, 129, 205, 0.25);
    }

    .form-register .form-floating input {
        border-radius: 0.25rem;
    }

    .form-register .btn-success {
        background-color: #fc81cd;
        border-color: #fc81cd;
    }

    .form-register .btn-success:hover {
        background-color: #e170b6;
        border-color: #e170b6;
    }

    .form-register .bg-light {
        background-color: #ffffff !important;
    }

    .form-register .shadow {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-register .rounded {
        border-radius: 10px;
    }

    .form-register .form-control:focus {
        border-color: #fc81cd;
        box-shadow: 0 0 0 0.25rem rgba(252, 129, 205, 0.25);
    }

</style>